
<div class="reset-page">

    <form class="rp-form js-reset-form" method="post" action="">
        <fieldset class="form-fieldset">
            <legend class="form-legend">Choose a new password</legend>
            <label class="form-label" for="username">
                New password
                <input class="form-input-alt" type="password" name="password" />
            </label>
            <label class="form-label" for="password">
                Confirm your password
                <input class="form-input-alt" type="password" name="password_confirm" />
            </label>
        </fieldset>

        <div class="rp-footer">

            <input class="button-blue su-submit" type="submit" value="login" />

        </div>
    </form>

</div>
